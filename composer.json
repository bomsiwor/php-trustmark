{
  "name": "bomsiwor/php-trustmark",
  "description": "Package for integrate with BPJS Trustmark",
  "version": "0.1.4",
  "type": "library",
  "keywords": [
    "php",
    "sdk",
    "api",
    "client",
    "bpjs",
    "bpjs-kesehatan"
  ],
  "license": "MIT",
  "require-dev": {
    "symfony/http-client": "^7.1",
    "nyholm/psr7": "^1.8",
    "laravel/pint": "^1.20",
    "mockery/mockery": "^1.6",
    "pestphp/pest": "^3.7",
    "pestphp/pest-plugin-faker": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Bomsiwor\\Trustmark\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "authors": [
    {
      "name": "bomsiwor",
      "email": "bomsiwor@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "psr/http-client": "^1.0",
    "php-http/discovery": "1.17",
    "psr/http-client-implementation": "*",
    "psr/http-factory-implementation": "*",
    "nullpunkt/lz-string-php": "^1.3",
    "respect/validation": "^2.3"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": false,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "lint": "pint -v",
    "test:lint": "pint --test -v",
    "test:unit": "pest --colors=always"
  }
}
